<?xml version="1.0" encoding="UTF-8"?>
<!-- ==================================================================== -->
<!--  Datasource config for Porandu                                       -->
<!-- ==================================================================== -->
<datasources>
  <datasource>
    <name>PostgreSQL</name>
    <connection-url>jdbc:postgresql://localhost:5432/database</connection-url>
    <driver-class>org.postgresql.Driver</driver-class>
    <user-name>user</user-name>
    <password>password</password>
  </datasource>

  <datasource>
    <name>MySql</name>
    <connection-url>jdbc:mysql://localhost:3306/database</connection-url>
    <driver-class>com.mysql.jdbc.Driver</driver-class>
    <user-name>user</user-name>
    <password>password</password>
  </datasource>

  <datasource>
    <name>Sqlite</name>
    <connection-url>jdbc:sqlite:path_to_db_file</connection-url>
    <driver-class>org.sqlite.JDBC</driver-class>
  </datasource>

  <datasource>
    <name>SqlServer</name>
    <connection-url>jdbc:sqlserver://localhost:1433;databaseName=database;</connection-url>
    <driver-class>com.microsoft.sqlserver.jdbc.SQLServerDriver</driver-class>
    <user-name>user</user-name>
    <password>password</password>
  </datasource>

  <datasource>
    <name>Oracle</name>
    <connection-url>jdbc:oracle:thin:(DESCRIPTION=(ADDRESS_LIST=(ADDRESS=(PROTOCOL=TCP)(HOST=localhost)(PORT=1521)))(CONNECT_DATA=(SID=database)))</connection-url>
    <driver-class>oracle.jdbc.OracleDriver</driver-class>
    <user-name>user</user-name>
    <password>password</password>
  </datasource>
</datasources>
